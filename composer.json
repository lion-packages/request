{
    "name": "lion/request",
    "description": "Library created to request input data and response requests",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Lion\\Request\\": "src/LionRequest/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require": {
        "php": ">=8.4"
    },
    "require-dev": {
        "lion/test": "^2.0 || ^3.0",
        "phpstan/phpstan": "^2.0",
        "squizlabs/php_codesniffer": "^3.11",
        "phpunit/phpunit": "^12.0",
        "infection/infection": "^0.29.14",
        "overtrue/phplint": "^9.5"
    },
    "config": {
        "allow-plugins": {
            "infection/extension-installer": false
        }
    }
}
